<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjs.dz.rzxt3.ViewFragment">
    <!--刷新控件-->
    <in.srain.cube.views.ptr.PtrFrameLayout xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    cube_ptr:ptr_duration_to_close="200"
    cube_ptr:ptr_duration_to_close_header="1000"
    cube_ptr:ptr_keep_header_when_refresh="true"
    cube_ptr:ptr_pull_to_fresh="false"
    cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
    cube_ptr:ptr_resistance="1.7">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/greenf"
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="5dp"
            >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/onclick2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
              />

            <TextView
                android:id="@+id/tv_pact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/pact_no"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_com_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/com_name"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pact_start_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pact_start_date"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="@string/date_biao"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/tv_pact_end_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/pact_end_date"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_con_con"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_con" />

                <TextView
                    android:id="@+id/tv_com_con_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="@string/com_con_name"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:paddingTop="10dp"
                    android:src="@mipmap/ic_shu" />
                <TextView
                    android:id="@+id/tv_com_con_ide"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="@string/com_con_ide"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_con_con_tel"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_tel" />

                <TextView
                    android:id="@+id/tv_com_con_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="@string/com_con_tel"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:paddingTop="5dp"
                    android:src="@mipmap/ic_shu" />

                <ImageView
                    android:id="@+id/im_con_con_tel_dx"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_duanxin" />
                <TextView
                    android:id="@+id/onclick1"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/im_com_addr"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:padding="10dp"
                    android:src="@mipmap/ic_dingwei" />

                <TextView
                    android:id="@+id/tv_com_addr"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    android:text="@string/com_addr"
                    android:textColor="@color/black"
                    android:textSize="12dp" />


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal">
                <com.baidu.mapapi.map.MapView
                    android:id="@+id/bmapView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:clickable="true" />
            </LinearLayout>
        </LinearLayout>
            <Button
                android:id="@+id/btn_upload"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textSize="@dimen/activity_horizontal_margin"
                android:textStyle="bold"
                android:text="@string/upload"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:background="@color/white"/>

        </LinearLayout>

    </in.srain.cube.views.ptr.PtrFrameLayout>

</FrameLayout>
